@using BlogTutorial.ViewModel
@model PostVM
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2>
                Add New Post
            </h2>
           <form method="post" asp-action="AddPost" asp-controller="Admin" enctype="multipart/form-data">

            <div class="row justify-content-center">
            <div class="col-md-6">
               <div class="form-group">
                   <label class="form-label" asp-for=Title></label>
                   <input class="form-control" asp-for=Title />
                   <span asp-validation-for=Title class=text-danger></span>
               </div>
              </div>
              <div class="col-md-6">
               <div class="form-group">
                   <label class="form-label" asp-for=SubTitle></label>
                   <input class="form-control" asp-for=SubTitle />
                   <span asp-validation-for=SubTitle class=text-danger></span>
               </div>
               </div>
               </div>

               
            <div class="row justify-content-center">
            <div class="col-md-6">
               <div class="form-group">
                   <label class="form-label" asp-for=Slug></label>
                   <input class="form-control" asp-for=Slug />
                   <span asp-validation-for=Slug class=text-danger></span>
               </div>
              </div>
              <div class="col-md-6">
               <div class="form-group">
                   <label class="form-label" asp-for=Date></label>
                   <input class="form-control" asp-for=Date value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly />
               </div>
               </div>
               </div>

               
               <div class="form-group">
                   <label class="form-label" asp-for=Image></label>
                   <input class="form-control" asp-for=Image />
                   <span asp-validation-for=Image class=text-danger></span>
               </div>
               <div class="form-group">
                   <label class="form-label" asp-for=Content></label>
                   <textarea class="form-control" asp-for=Content id="editor" >

                   </textarea>
                   <span asp-validation-for=Content class=text-danger></span>
               </div>
               <button class="btn btn-primary" type="submit">Create Post</button>
           </form>
        </div>
    </div>
</div>

<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>
